// 导航栏背景颜色
bg-linear()
    background-image: linear-gradient(to right, #c59e5b, #dfc48c)

layfex($w, $h)
    display inline-block
    width $w
    height $h
    background-color: $bg-footer

layfl()
    overflow hidden
    float: left;
    width: 100%;

// absolute()
absolute()
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0

// fixed()
fixed()
    position fixed

// before
before()
    content ''
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0

// after
after()
    content ''
    display block
    position: absolute

//reset ul
resetul()
    margin 0
    padding 0
    list-style none

flexcon()
    display flex
    flex-direction row
    justify-content center
    align-items center

cursor()
    cursor pointer

test()
    border 1px solid skyblue

// 上箭头
triangle-top($w, $h, $color)
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 $w $h $w;
    border-color: transparent transparent $color transparent;

// 下箭头
triangle-down($w, $h, $color)
    width: 0;
    height: 0;
    border-style: solid;
    border-width: $h $w 0 $w;
    border-color: $color transparent transparent transparent;

// 右箭头
triangle-right($w, $h, $color)
    width: 0;
    height: 0;
    border-style: solid;
    border-width: $w 0 $w $h;
    border-color: transparent transparent transparent $color;

// 左箭头
triangle-left($w, $h, $color)
    width: 0;
    height: 0;
    border-style: solid;
    border-width: $w $h $w 0;
    border-color: transparent $color transparent transparent;

bgline()
    background url("~@img/comimages/home/bg/fenlei.png") bottom / 100% 1px no-repeat
