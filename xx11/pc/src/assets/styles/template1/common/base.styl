@import "../themes/mixin.styl"; //引入配置

html
    height: 100%;

body
    height: 100%;

img
    max-width: 100%;

body
    margin: 0 auto !important;
    -webkit-overflow-scrolling: touch;
    -webkit-text-size-adjust: 100% !important;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);

*
    margin: 0;
    padding: 0;
    touch-action: pan-y;
    box-sizing: border-box;
    font-family: -apple-system, 'SourceHanSansCN-Normal', BlinkMacSystemFont, 'PingFang SC', 'Segoe UI', Roboto, 'Helvetica Neue', Helvetica, 'Hiragino Sans GB', 'Microsoft YaHei', SimSun, sans-serif;

ul
    list-style: none;

input,
input[type='text'],
input[type='password']
    -webkit-appearance: none;
    border none
    outline none
    padding-left 10px
    padding-right 10px
    font-size 16px
    width 100%

input:-webkit-autofill
    -webkit-box-shadow: 0 0 0px 1000px #f9f9fa inset !important;
    -webkit-text-fill-color: #1c1e22 !important;

input::-webkit-input-placeholder, textarea::-webkit-input-placeholder
    font_color(base_font_color02)

input:-moz-placeholder, textarea:-moz-placeholder
    font_color(base_font_color02)

input::-moz-placeholder, textarea::-moz-placeholder
    font_color(base_font_color02)

input:-ms-input-placeholder, textarea:-ms-input-placeholder
    font_color(base_font_color02)

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
    -webkit-appearance: none

input[type="number"]
    -moz-appearance: textfield

textarea
    &:focus
        outline none

textarea,
textarea::-webkit-input-placeholder,
textarea:-moz-placeholder,
textarea::-moz-placeholder,
textarea:-ms-input-placeholder
    font_color(base_font_color02)
    outline none

.slide-right-enter-active,
.slide-right-leave-active,
.slide-left-enter-active,
.slide-left-leave-active
    will-change: transform;
    transition: all 200ms;
    position: absolute;

.slide-right-enter
    opacity: 0;
    transform: translate3d(-100%, 0, 0);

.slide-right-leave-active
    opacity: 0;
    transform: translate3d(100%, 0, 0);

.slide-left-enter
    opacity: 0;
    transform: translate3d(100%, 0, 0);

.slide-left-leave-active
    opacity: 0;
    transform: translate3d(-100%, 0, 0);


::-webkit-scrollbar
    /*滚动条整体样式*/
    width: 6px; /*高宽分别对应横竖滚动条的尺寸*/
    height: 6px;

::-webkit-scrollbar-thumb
    border-radius: 10px;
    bg_color(base_bg_color02)
    background-image: -webkit-linear-gradient(45deg, rgba(255, 255, 255, 0.2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0.2) 75%, transparent 75%, transparent);

::-webkit-scrollbar-track
    /*滚动条里面轨道*/
    box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
    bg_color(bg48)
    bg_color(base_bg_color03)
    border-radius: 10px;






